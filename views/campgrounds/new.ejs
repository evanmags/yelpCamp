<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground</h1>
        <div style="width: 40%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campName" type="text" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" name="price" type="number" placeholder="$12,000" min-value='0.00' step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" name="image" type="text" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" name="description" type="text" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>