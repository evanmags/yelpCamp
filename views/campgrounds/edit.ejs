<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 40%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[price]" type="number" value="<%= campground.value %>" min-value='0.00' step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[description]" type="text" value="<%= campground.description%>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Back to All Campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>